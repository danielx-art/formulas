---
export interface Props {
  title: string;
  lang?: string;
}

const { title, lang = "pt-br" } = Astro.props;
---

<div class="section-inner">
  <h2>{title}</h2>
  <slot />
</div>

<style>
  .section-inner {
    display: flex;
    flex-flow: column nowrap;
    box-sizing: border-box;
    justify-content: center;
    /* margin: 0.525vw; */
    padding: 1.5vw 1.5vw 1vw 1.5vw;
    width: calc(50% - 1vw);
    background-color: whitesmoke;
    border-radius: 5px;
    color: rgb(24, 24, 24);
    overflow: hidden;
  }
  h2 {
    margin: 0 0 0vw 0;
    padding: 0;
    /* font-size: 2.625vw; */
    font-size: 2vw;
    color: rgb(24, 24, 24);
  }
</style>
